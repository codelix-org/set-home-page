<div class="container">
  <h1>All the posts</h1>

  <table>
    <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= link_to 'Show', post %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <%= link_to 'New Post', new_post_path, class: 'generic-button' %>
</div>
